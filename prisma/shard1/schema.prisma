datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL_SHARD_1")
}

generator client {
    provider = "prisma-client-js"
    output   = "../../src/generated/prisma/shard1"
}

model Shift {
    id        String   @id @default(uuid())
    requestId String
    companyId String
    userId    String
    startTime DateTime
    endTime   DateTime
    action    String
    status    String   @default("pending")
}
